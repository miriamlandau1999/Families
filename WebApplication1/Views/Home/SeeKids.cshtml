@using WebApplication1.Models
@using WebApplication1.data
@model SeeKidsViewModel

<div class="col-md-6 col-md-offset-4">
    <a class="btn btn-danger" href="/home/NewKid?Id=@Model.Family.Id">Add Child</a>
    <br />
    <br />
    @if (Model.KidAdded != null)
    {
        <div class="alert alert-success">
            <strong> @Model.KidAdded.FirstName has successfully been added!! </strong>
        </div>
    }
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>Name</th>
            <th>Age</th>
        </tr>
        @foreach (Kid kid in Model.Kids)
        {
            <tr>
                <td>@kid.FirstName</td>
                <td>@kid.Age</td>
            </tr>
        }
     </table>
</div>

